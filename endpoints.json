{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "votes": 100,
          "comment_count": "13"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of the article with the specified article id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "votes": 100,
        "comment_count": "13"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes value on the specified article",
    "exampleRequestBody": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "votes": 101,
        "comment_count": "13"
      }
    }
  },
  "GET /api/articles/article_id/comments": {
    "description": "serves an array of the comment(s) for the specified article id",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 5,
          "votes": 0,
          "created_at": "2020-11-03T21:00:00.000Z",
          "author": "butter_bridge",
          "body": "I hate streaming noses"
        },
        {
          "comment_id": 6,
          "votes": 0,
          "created_at": "2020-04-11T21:02:00.000Z",
          "author": "butter_bridge",
          "body": "I hate streaming eyes even more"
        }
      ]
    }
  },
  "POST /api/articles/article_id/comments": {
    "description": "adds a new comment to a specific article id",
    "exampleRequestBody": {
      "username": "icellusedkars",
      "body": "not a particularly thrilling read"
    },
    "exampleResponse": {
      "comment_id": 19,
      "author": "icellusedkars",
      "article_id": 5,
      "votes": 0,
      "created_at": "2021-08-06T08:09:53.928Z",
      "body": "not a particularly thrilling read"
    }
  },
  "PATCH /api/comments/comment_id": {
    "description": "updates the votes value on specified comment",
    "exampleRequestBody": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "comment_id": 5,
      "author": "butter_bridge",
      "article_id": 1,
      "votes": 1,
      "created_at": "2020-11-03T21:00:00.000Z",
      "body": "I hate streaming noses"
    }
  },
  "DELETE /api/comments/comment_id": {
    "description": "deletes specified comment",
    "exampleResponse": 204
  },
  "GET /api/users": {
    "description": "serves an array of usernames",
    "exampleResponse": [
      { "username": "butter_bridge" },
      { "username": "icellusedkars" },
      { "username": "rogersop" },
      { "username": "lurker" }
    ]
  },
  "GET /api/users/:username": {
    "description": "serves a user object from the specified username",
    "exampleResponse": {
      "username": "lurker",
      "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png",
      "name": "do_nothing"
    }
  }
}
